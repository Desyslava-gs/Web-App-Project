@model DetailsCarViewModel

@{
    ViewData["Title"] = "Details";
    var IsAdmin = User.IsInRole(WebConstants.AdminRoleName);
}

<div class="container">
    <div>
        <h2 class="text-center">Детайли за Автомобила</h2>
    </div>
    <hr />
</div>
<div style="margin-top:1%; margin-bottom: 2%;"
     class="mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
    <h2 class="display-5">@Model.Make @Model.Model</h2>
    <div class="shadow-sm mx-auto" style=" width: 50%; height: auto;">
        <img src="@Model.PictureUrl" style="display: block; margin: 0 auto; width: 100%" />
    </div>
</div>
<div class="text-left">
    <dl class="row" style="margin-left: 26%">
        <dt class="col-sm-3">
            <label asp-for="PlateNumber"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.PlateNumber
        </dd>
        <dt class="col-sm-3">
            <label asp-for="Year"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.Year
        </dd>
        <dt class="col-sm-3">
            <label asp-for="Color"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.Color
        </dd>
        <dt class="col-sm-3">
            <label asp-for="FuelType"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.FuelType
        </dd>
        <dt class="col-sm-3">
            <label asp-for="VinNumber"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.VinNumber
        <dt class="col-sm-3">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-9">
            @Model.Description
        </dd>
    </dl>
</div>
<div class="text-center overflow-hidden">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    @if (IsAdmin)
    {
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    }
    <a class="btn btn-info" asp-controller="Repairs" asp-action="Index" asp-route-id="@Model.Id">Repairs</a>
    @*<a class="btn btn-info" asp-controller="Repairs" asp-action="Create" asp-route-id="@Model.Id">RepairsCreate</a>*@
</div>
<div class="container" style="margin-top:3%; margin-bottom: 2%;">
    <a class="float-right" asp-action="Index">Go to Back</a>
</div>

