@model DeleteCarViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <dl class="row">
        <dt class="col-sm-8">
        </dt>
        <dd class="col-sm-4">

        </dd>
        <dt class="col-sm-8">
            <h2 class="text-black-50">Are you sure you want to delete this Car?</h2>
            <hr/>
        </dt>
        <dd class="col-sm-4">
        </dd>
        <dt class="col-sm-8">
            
                <div class="col justify-content-center">

                    <dl class="row">
                        <dt class="col-sm-6">
                            <label asp-for="Make"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.Make
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="Model"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.Model
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="Year"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.Year
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="Color"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.Color
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="PlateNumber"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.PlateNumber
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="FuelType"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.FuelType
                        </dd>
                        <dt class="col-sm-6">
                            <label asp-for="VinNumber"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.VinNumber
                        <dt class="col-sm-6">
                            <label asp-for="Description"></label>
                        </dt>
                        <dd class="col-sm-6">
                            @Model.Description
                        </dd>
                    </dl>
                </div>
            
        </dt>
        <dd class="col-sm-4">
            <div class="shadow-sm " style="width: 100%; height: auto;">
                <img src="@Model.PictureUrl" style="display: block; margin: 0 auto; width: 100%" />
            </div>
        </dd>
        <dt class="col-sm-8"></dt>
        <dd class="col-sm-4">
            <form class="float-right" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </dd>
    </dl>
</div>
<hr />
<div class="container">
    <div>
        <a class="float-right" asp-action="Details" asp-route-id="@Model.Id">Go to Back</a>
    </div>
</div>
